# Configuration des variables d'environnement pour LLDP Discovery
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement
# Puis exécutez: source .env

# Credentials des switches Aruba
export ARUBA_USERNAME="admin"
export ARUBA_PASSWORD="votre_mot_de_passe_ici"

# Alternative (synonymes)
export SWITCH_USERNAME="admin"
export SWITCH_PASSWORD="votre_mot_de_passe_ici"

# Configuration des timeouts (optionnel)
export SSH_TIMEOUT=30
export CONNECTION_TIMEOUT=10

# Configuration des logs (optionnel)
export LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
export LOG_FILE="output/lldp_discovery.log"

# Configuration par défaut des fichiers
export CONFIG_FILE="python/switches_config.json"
export OUTPUT_FILE="output/lldp_discovery.json"

# Affichage de confirmation
echo "Variables d'environnement LLDP Discovery chargées"
echo "Username: $ARUBA_USERNAME"
echo "Config file: $CONFIG_FILE"
echo "Output file: $OUTPUT_FILE"
